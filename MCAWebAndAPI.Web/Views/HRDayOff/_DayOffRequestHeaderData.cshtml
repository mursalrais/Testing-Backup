@using MCAWebAndAPI.Model.ViewModel.Form.HR
@model DayOffRequestVM

<div class="col-md-6">
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.ProfessionalFullName).Class("col-md-4 control-label")
        <div class="col-md-8">
            @Html.DisplayFor(m => m.ProfessionalFullName)
        </div>
    </div>

    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.ProjectUnit).Class("col-md-4 control-label")
        <div class="col-md-8">
            @Html.DisplayFor(m => m.ProjectUnit)
        </div>
    </div>
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.RequestDate).Class("col-md-4 control-label")
        <div class="col-md-8">
            @Html.EditorFor(m => m.RequestDate)
        </div>
    </div>
    
    @Html.HiddenFor(m => m.ProfessionalID)
    @Html.HiddenFor(m => m.Professional)
    @Html.HiddenFor(m => m.PositionID)
    @Html.HiddenFor(m => m.PositionName)
    @Html.HiddenFor(m => m.Requestor)
    @Html.HiddenFor(m => m.StatusForm)
    

</div>