@model MCAWebAndAPI.Model.ViewModel.Form.Finance.TaxExemptionOtherVM

<div class="form-group">
    @Html.Bootstrap().LabelFor(m => m.TaxPeriod).Class("col-md-4 control-label")
    <div class="col-md-8">
        @Html.EditorFor(m => m.TaxPeriod)
    </div>
</div>
<div class="form-group">
    @Html.Bootstrap().LabelFor(m => m.GrossIncome).Class("col-md-4 control-label")
    <div class="col-md-8">
        @Html.EditorFor(m => m.GrossIncome)
        <span class="field-validation-error" id="grossIncomeRequiredMessage" style="display:none;">The Gross Income field is required</span>
    </div>
</div>
<div class="form-group">
    @Html.Bootstrap().LabelFor(m => m.TotalTax).Class("col-md-4 control-label")
    <div class="col-md-8">
        @Html.EditorFor(m => m.TotalTax)
        <span class="field-validation-error" id="totalTaxRequiredMessage" style="display:none;">The Total Tax field is required</span>
    </div>
</div>
