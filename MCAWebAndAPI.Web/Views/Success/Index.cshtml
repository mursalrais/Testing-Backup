<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-center error-box">
                    <h2 class="font-xl"><strong>Congratulations</strong></h2>
                    <br>
                    <p class="lead semi-bold">
                        @ViewBag.SuccessMessage
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@if(!string.IsNullOrEmpty(@ViewBag.PreviousUrl))
{
<div class="form-actions">
    <div class="row">
        <div class="col-sm-12">
            <button id="back-button" class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                OK
            </button>
        </div>
    </div>
</div>
}

@section scripts{

    <script>

        $(document).ready(function () {
            $('#back-button').click(function () {
                var url = "@ViewBag.PreviousUrl";
                window.top.location = url;
            });
        });

    </script>
}