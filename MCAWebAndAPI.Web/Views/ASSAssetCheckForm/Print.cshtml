
@using MCAWebAndAPI.Model.ViewModel.Form.Asset
@model AssetCheckFormHeaderVM

@{
    Layout = "~/Views/Shared/_LayoutPDF.cshtml";
}

<div class="form-horizontal">
    <fieldset>
        <div class="row">
            <div class="col-sm-12">
                <center><img src="@Model.UrlImage" /><br /><br /></center>
                <p style="font-size:larger; text-align: center;">Asset Check Form</p>
                <table style="border: 0px; width:30%;">
                    <tr>
                        <td style="border:0px; padding: 5px;">Form ID</td>
                        <td style="border:0px; padding: 5px;">:</td>
                        <td style="border:0px; padding: 5px;">@Model.hFormId</td>
                    </tr>
                    <tr>
                        <td style="border:0px; padding: 5px;">Created Date</td>
                        <td style="border:0px; padding: 5px;">:</td>
                        <td style="border:0px; padding: 5px;">@Model.CreateDate.Value.ToString("dd-MM-yyyy")</td>
                    </tr>
                    <tr>
                        <td style="border:0px; padding: 5px;">Count Date</td>
                        <td style="border:0px; padding: 5px;">:</td>
                        <td style="border:0px; padding: 5px;"></td>
                    </tr>
                    <tr>
                        <td style="border:0px; padding: 5px;">Counted by  (1)</td>
                        <td style="border:0px; padding: 5px;">:</td>
                        <td style="border:0px; padding: 5px;"></td>
                    </tr>
                    <tr>
                        <td style="border:0px; padding: 5px;">Counted by  (2)</td>
                        <td style="border:0px; padding: 5px;">:</td>
                        <td style="border:0px; padding: 5px;"></td>
                    </tr>
                    <tr>
                        <td style="border:0px; padding: 5px;">Counted by  (3)</td>
                        <td style="border:0px; padding: 5px;">:</td>
                        <td style="border:0px; padding: 5px;"></td>
                    </tr>
                </table>
                <br /><br />
                <table>
                    <tr>
                        <td>Item</td>
                        <td>Asset-Sub Asset</td>
                        <td>Asset description</td>
                        <td>Serial No</td>
                        <td>Province</td>
                        <td>Location</td>
                        <td>Status</td>
                        <td>Existense</td>
                        <td>Condition</td>
                        <td>Specification</td>
                        <td>System Qty</td>
                        <td>Physical Qty</td>
                    </tr>
                    @{int i = 0;}
                    @foreach (var item in Model.Details)
                    {
                        i++;

                        <tr>
                            <td>@i</td>
                            <td>@item.assetSubAssetID</td>
                            <td>@item.assetSubAssetDescription</td>
                            <td>@item.serialNo</td>
                            <td>@item.province</td>
                            <td>@item.location</td>
                            <td>@item.status</td>
                            <td>@item.existense</td>
                            <td>@item.condition</td>
                            <td>@item.specification</td>
                            <td>@item.systemQty</td>
                            <td>@item.physicalQty</td>
                        </tr>
                    }
                </table>
                <div style="page-break-before:auto">&nbsp;</div> 
                <br /><br />
                <p>Counted By :</p>
                <br /><br />
                <br /><br />
                <table style="border: 0px; width:70%;">
                    <tr>
                        <td style="border:0px; padding: 10px;"><u>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</u></td>
                        <td style="border:0px; padding: 10px;"><u>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</u></td>
                        
                    </tr>
                </table>
            </div>
        </div>
    </fieldset>
</div>

<style>
    table {
        width: 100%;
    }

    table, th, td {
        padding: 10px;
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>