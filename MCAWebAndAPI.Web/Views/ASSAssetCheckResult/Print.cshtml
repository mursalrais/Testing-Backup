@using MCAWebAndAPI.Model.ViewModel.Form.Asset

@model AssetCheckResultHeaderVM

@{
    Layout = "~/Views/Shared/_LayoutPDF.cshtml";
}

<div class="form-horizontal">
    <fieldset>
        <div class="row">
            <div class="col-sm-12">
                <img src="@Model.UrlImage" /><br /><br />
                <p style="font-size:larger; text-align: center;">Asset Check Result</p>
                <table style="border: 0px; width:30%;">
                    <tr>
                        <td style="border:0px; padding: 5px;">Form ID</td>
                        <td style="border:0px; padding: 5px;">:</td>
                        <td style="border:0px; padding: 5px;">@Model.FormID.Text</td>
                    </tr>
                    <tr>
                        <td style="border:0px; padding: 5px;">Created Date</td>
                        <td style="border:0px; padding: 5px;">:</td>
                        <td style="border:0px; padding: 5px;">@Model.CreateDate</td>
                    </tr>
                    <tr>
                        <td style="border:0px; padding: 5px;">Count Date</td>
                        <td style="border:0px; padding: 5px;">:</td>
                        <td style="border:0px; padding: 5px;">@Model.CountDate</td>
                    </tr>
                    <tr>
                        <td style="border:0px; padding: 5px;">Counted by  (1)</td>
                        <td style="border:0px; padding: 5px;">:</td>
                        <td style="border:0px; padding: 5px;">@Model.hCountedBy1</td>
                    </tr>
                    <tr>
                        <td style="border:0px; padding: 5px;">Counted by  (2)</td>
                        <td style="border:0px; padding: 5px;">:</td>
                        <td style="border:0px; padding: 5px;">@Model.hCountedBy2</td>
                    </tr>
                    <tr>
                        <td style="border:0px; padding: 5px;">Counted by  (3)</td>
                        <td style="border:0px; padding: 5px;">:</td>
                        <td style="border:0px; padding: 5px;">@Model.hCountedBy3</td>
                    </tr>
                </table>
                <br /><br />
                <table>
                    <tr>
                        <td>Asset-Sub Asset</td>
                        <td>Serial No</td>
                        <td>Province</td>
                        <td>Location</td>
                        <td>Status</td>
                        <td>Existense</td>
                        <td>Condition</td>
                        <td>Specification</td>
                        <td>System Qty</td>
                        <td>Physical Qty</td>
                        <td>Dispose</td>
                        <td>Remarks</td>
                    </tr>
                    @foreach (var item in Model.Details)
                    {
                        <tr>
                            <td>@item.AssetSubAsset</td>
                            <td>@item.SerialNo</td>
                            <td>@item.Province</td>
                            <td>@item.LocationName</td>
                            <td>@item.Status</td>
                            <td>@item.Existense</td>
                            <td>@item.Condition</td>
                            <td>@item.Specification</td>
                            <td>@item.SystemQty</td>
                            <td>@item.PhysicalQty</td>
                            <td>@item.Dispose</td>
                            <td>@item.Remarks</td>
                        </tr>
                    }
                </table>
                <br /><br />
                <p>Counted By :</p>
                <br /><br /><br /><br /><br /><br /><br />
                <table style="border: 0px; width:70%;">
                    <tr>
                        <td style="border:0px; padding: 5px;"><u>@Model.hCountedBy1Nama</u></td>
                        <td style="border:0px; padding: 5px;"><u>@Model.hCountedBy2Nama</u></td>
                        <td style="border:0px; padding: 5px;"><u>@Model.hCountedBy3Nama</u></td>
                    </tr>
                </table>
            </div>
        </div>
    </fieldset>
</div>

<style>
    table {
        width: 100%;
    }

    table, th, td {
        padding: 10px;
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>
