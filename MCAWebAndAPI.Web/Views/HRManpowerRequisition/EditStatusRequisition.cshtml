@using MCAWebAndAPI.Model.ViewModel.Form.HR
@model ManpowerRequisitionVM

@{
    ViewBag.Title = "Edit Status";
}

@using (Html.BeginForm("EditStatusRequisition", "HRManpowerRequisition", FormMethod.Post, 
                                                     new
                                                     { @class = "form-horizontal",
                                                         enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend></legend>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.PositionManpower).Class("col-xs-4 control-label")
                    <div class="col-md-8">
                        @Html.EditorFor(m => m.PositionManpower)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.Status).Class("col-xs-4 control-label")
                    <div class="col-md-8">
                        @Html.EditorFor(m => m.Status)
                    </div>
                </div>
            </div>
        </div>
   
     
        
       
        
        @Html.HiddenFor(m => m.ID);
    </fieldset>
    <div class="form-actions">
        <div class="row">
            <div class="col-md-12">               
                <button id="submit-button" class="btn btn-primary" type="submit">
                    <i class="fa fa-save"></i>
                    Submit
                </button>
            </div>
        </div>
    </div>
}

@section scripts{

    <script>
        function onSelectIDCardType(e) {
            var dataItem = this.dataItem(e.item);
            if (dataItem === "KTP") {
                $('#IDCardExpiry').closest('.form-group').show();
            } else {
                $('#IDCardExpiry').closest('.form-group').hide();
            }
        }
    </script>
}