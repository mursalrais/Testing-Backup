@using MCAWebAndAPI.Model.ViewModel.Form.HR
@model ManpowerRequisitionVM


<div class="col-md-6">
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.PersonnelManagement).Class("col-md-4 control-label")
        <div class="col-md-8">
            @Html.EditorFor(m => m.PersonnelManagement)
        </div>
    </div>
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.BudgetManagement).Class("col-md-4 control-label")
        <div class="col-md-8">
            @Html.EditorFor(m => m.BudgetManagement)
        </div>
    </div>
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.Workplan).Class("col-md-4 control-label")
        <div class="col-md-8">
            @{
                var arr = Model.Workplan.ToArray();
                for (int i = 0; i < Model.Workplan.ToArray().Length; i++)
                {
                    @Html.EditorForModel(arr[i].Value);
                }
            }
        </div>
    </div>
</div>


