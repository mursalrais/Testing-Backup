@using MCAWebAndAPI.Model.ViewModel.Form.HR
@model ManpowerRequisitionVM


<div class="col-xs-6">
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.PersonnelManagement).Class("col-xs-4 control-label")
        <div class="col-xs-8">
            @Html.EditorFor(m => m.PersonnelManagement)
        </div>
    </div>
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.BudgetManagement).Class("col-xs-4 control-label")
        <div class="col-xs-8">
            @Html.EditorFor(m => m.BudgetManagement)
        </div>
    </div>
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.Workplan).Class("col-xs-4 control-label")
        <div class="col-xs-8">     
            @{
                var arr = Model.Workplan.ToArray();
                foreach (var item in Model.Workplan)
                {
                    @Html.Kendo().CheckBox().Label(item.Text).Name(item.Text).Checked(item.Value);
                    <br>
                }
            }    
        </div>
    </div>    
</div>


