    <script>
        $(document).ready(function () {
            var nationalityDropDownList = $("#Nationality_Value").data("kendoDropDownList");
            nationalityDropDownList.bind("dataBound", function (e) {
            });

        });

        function filterIDCardType(){
            return {
                nationality: $("#Nationality_Value").closest('span').find('span.k-input').text()
            };
        }

        function toggleIDCardExpiry(idCardType) {
            if (idCardType == "e-KTP") {
                $('#IDCardExpiry').closest('.form-group').hide();
            } else {
                $('#IDCardExpiry').closest('.form-group').show();
            }
        }

        function onSelectIDCardType(e) {
            var dataItem = this.dataItem(e.item);
            toggleIDCardExpiry(dataItem.Text);
        }

    </script>

