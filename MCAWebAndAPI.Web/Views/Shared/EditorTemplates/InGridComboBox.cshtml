@model MCAWebAndAPI.Model.ViewModel.Control.InGridComboBoxVM

@if (Model.Text.IsEmpty())
{
    @(Html.Kendo().DropDownListFor(m => m)
        .DataValueField("Value")
        .DataTextField("Text")
        .Filter("contains")
        .BindTo(((System.Collections.IEnumerable)ViewData["BindTo"])))
}
else
{
    @(Html.Kendo().DropDownListFor(m => m)
        .DataValueField("Value")
        .DataTextField("Text")
        .Value(Model.Value + "")
        .Text(Model.Text)
        .Filter("contains")
        .BindTo(((System.Collections.IEnumerable)ViewData["BindTo"])))
}

