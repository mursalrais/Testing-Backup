@model MCAWebAndAPI.Model.ViewModel.Control.ComboBoxVM

@if (Model.OnSelectEventName.IsEmpty())
{
    @(Html.Kendo().DropDownListFor(m => m.Value)
            .BindTo(Model.Choices)
            .Value(Model.Value)            
            .Filter("contains")
            .HtmlAttributes(new
            {
                @class = "form-control",
                style = "width:100%;"
            })
    )
}
else
{
    @(Html.Kendo().DropDownListFor(m => m.Value)
            .BindTo(Model.Choices)
            .Filter("contains")
            .Events(e => e.Select(Model.OnSelectEventName))
            .Value(Model.Value)
            .HtmlAttributes(new
            {
                @class = "form-control",
                style = "width:100%;"
            })
    )
}
@Html.ValidationMessageFor(model => model)