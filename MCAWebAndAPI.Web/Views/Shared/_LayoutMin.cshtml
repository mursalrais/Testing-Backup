<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/modernizr")

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <!-- Basic CSS Frameworks -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />

    @Styles.Render("~/Content/theme")

    <!-- Kendo Frameworks-->
    <link href="https://cdn.kendostatic.com/2016.1.412/styles/kendo.common-fiori.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.kendostatic.com/2016.1.412/styles/kendo.mobile.all.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.kendostatic.com/2016.1.412/styles/kendo.dataviz.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.kendostatic.com/2016.1.412/styles/kendo.fiori.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.kendostatic.com/2016.1.412/styles/kendo.dataviz.fiori.min.css" rel="stylesheet" type="text/css" />
    <script src="https://ajax.aspnetcdn.com/ajax/3.5/MicrosoftAjax.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/3.0/MicrosoftMvcAjax.js"></script>
    <script src="https://cdn.kendostatic.com/2016.1.412/js/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.15.0/jquery.validate.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="https://cdn.kendostatic.com/2016.1.412/js/jszip.min.js"></script>
    <script src="https://cdn.kendostatic.com/2016.1.412/js/kendo.all.min.js"></script>
    <script src="https://cdn.kendostatic.com/2016.1.412/js/kendo.aspnetmvc.min.js"></script>
    <script type="text/javascript" src="~/Scripts/libs/iframeResizer.contentWindow.min.js" defer></script>
    <script>
			var iFrameResizer = {
					messageCallback: function(message){
						alert(message,parentIFrame.getId());
					}
				}
    </script>
    
    <!-- Basic JS Libraries -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js">
        //<![CDATA[//]]>
    </script>

    <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>

</head>
<body class="smart-style-6">

    <div id="main" role="main">
        <div id="content">
            <div class="panel panel-default">
                <div class="panel-body">
                    @RenderBody()
                </div>
            </div>
        </div>    
    </div>

    @Scripts.Render("~/bundles/apps")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
      $(document).ajaxError(function (e, jqxhr, settings, exception) {
                       e.stopPropagation();
                       if (jqxhr != null)
                           console.log(jqxhr.responseText);
                     });
    </script>
</body>
</html>
