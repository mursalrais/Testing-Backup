    <script src="http://cdn.kendostatic.com/2016.1.412/js/jquery.min.js"></script>
    <script src="http://cdn.kendostatic.com/2016.1.412/js/jszip.min.js"></script>
    <script src="http://cdn.kendostatic.com/2016.1.412/js/kendo.all.min.js"></script>
    <script src="http://cdn.kendostatic.com/2016.1.412/js/kendo.aspnetmvc.min.js"></script>
    
    <!-- Basic JS Libraries -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js">
        //<![CDATA[//]]>
    </script>

    <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>

</head>
<body>

    <div id="main-content">

        @RenderBody()

        <!-- MAIN CONTENT ENDS HERE-->
    </div>


    @Scripts.Render("~/bundles/apps")
    @RenderSection("scripts", required: false)
</body>
</html>
