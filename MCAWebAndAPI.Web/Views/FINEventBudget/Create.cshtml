@model MCAWebAndAPI.Model.ViewModel.Form.Finance.EventBudgetVM

@*
    Wireframe FIN04: Event Budget
*@

@using (Html.BeginForm("Create", "FINEventBudget",
    FormMethod.Post,
    new
    {
        @class = "form-horizontal",
        enctype = "multipart/form-data"
    }))
{
    <fieldset>
        <legend>Event Budget</legend>
        <div class="row">
            <div class="col-sm-6">
                @Html.HiddenFor(m => m.ID)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.EventName).Class("col-sm-3 control-label")
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.EventName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.DateFrom).Class("col-sm-3 control-label")
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.DateFrom)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.DateTo).Class("col-sm-3 control-label")
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.DateTo)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.Project).Class("col-sm-3 control-label")
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.Project)
                        @Html.HiddenFor(m => m.Project.Value, new { @id = "hiddenProjectValue" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.Activity).Class("col-sm-3 control-label")
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.Activity)
                        <!-- TODO: implement activityIdHidden -->
                        <input type="hidden" id="activityIdHidden" value="-1" name="activityIdHidden" />
                    </div>
                </div>

                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.Venue).Class("col-sm-3 control-label")
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.Venue)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.Fund).Class("col-sm-3 control-label")
                    <div class="col-sm-8">
                        @Html.DisplayFor(m => m.Fund)
                    </div>
                </div>

            </div>

            <!-- Right Column -->
            <div class="col-sm-6">
   
                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.Documents).Class("col-md-2 control-label")
                    <div class="col-md-7">
                        @Html.EditorFor(m => m.Documents)
                    </div>
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.DocumentUrl))
                {
                    <div class="form-group">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.Bootstrap().LabelFor(m => m).Class("col-sm-4 control-label")
                                <div class="col-sm-8">
                                    <button id="application-document-button" class="btn btn-default" type="button">
                                        Click Here to go to Requisite Note Attachments
                                    </button>
                                </div>
                            </div>
                        </div>
                        <script>
                $('#application-document-button').click(function () {
                    parent.postMessage({
                        result : "Success", urlToRedirect : "@Model.DocumentUrl" }, "@Model.DocumentUrl" );
                });
                        </script>
                    </div>
                }

                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.Rate).Class("col-sm-2 control-label")
                    <div class="col-sm-7">
                        @Html.EditorFor(m => m.Rate)
                    </div>
                </div>

                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.TotalDirectPayment).Class("col-sm-2 control-label")
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.TotalDirectPayment, new { HtmlAttributes = new { @class = "control-textbox-padding6px", @readonly = "readonly" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.TotalSCA).Class("col-sm-2 control-label")
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.TotalSCA, new { HtmlAttributes = new { @class = "control-textbox-padding6px", @readonly = "readonly" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.TotalIDR).Class("col-sm-2 control-label")
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.TotalIDR, new { HtmlAttributes = new { @class = "control-textbox-padding6px", @readonly = "readonly" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Bootstrap().LabelFor(m => m.TotalUSD).Class("col-sm-2 control-label")
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.TotalUSD, new { HtmlAttributes = new { @class = "control-textbox-padding6px", @readonly = "readonly" } })
                    </div>
                </div>
            </div>

         
        </div>

        <legend>Item Details</legend>
        <div class="row">
            @Html.Partial("_ItemDetails", Model.ItemDetails)
        </div>
    </fieldset>

    <div class="form-actions">
        <div class="row">
            <div class="col-sm-12">

                <button id="submit-button" class="btn btn-primary" type="submit">
                    <i class="fa fa-save"></i>
                    Submit
                </button>
            </div>
        </div>
    </div>
}

@section scripts{
<script type="text/javascript">
        $(document).ready(function () {


            $("#Date").kendoDatePicker({
                format: "mm/dd/yyyy"
            });

        });


    $(document).ready(function () {

        $("#hdnEvenBudgetId").val("-1");
    });

    function onSelectProject(e) {
        var dataItem = this.dataItem(e.item);
        ClearControl();
        $("#hiddenProjectValue").val(dataItem.Value);
    }

    function toggleEventBudgetComboBox(category) {
        var categoryDropDownList = $("#EventBudgetNo_Value").data("kendoDropDownList");

        if (categoryDropDownList !== 'undefined' && category === CATEGORY_NON_EVENT)
        {
            categoryDropDownList.options.optionLabel = "";
            categoryDropDownList.refresh();
            categoryDropDownList.select(0);
            categoryDropDownList.enable(false);

            $("#hdnEvenBudgetId").val("-1");

            refreshItemDetailGrid();
        }
        else
        {
            categoryDropDownList.enable(true);
        }
    }

    function onSelectCategory(e) {
        var data = this.dataItem(e.item);
        toggleEventBudgetComboBox(data);
    }

    function onSelectEventBudgetNo(e) {
        var dataItem = this.dataItem(e.item);

        $("#hdnEvenBudgetId").val(dataItem.ID);

        refreshItemDetailGrid();
    }

    function refreshItemDetailGrid()
    {
        $("#ItemDetails").data("kendoGrid").dataSource.read();
    }

</script>
}

<style media="screen">
    #Fund {
        background-color: #dedede;
    }
</style>