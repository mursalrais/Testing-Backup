                  </div>
              </div>

              <div class="form-group">
                  @Html.Bootstrap().LabelFor(m => m.DocumentNo).Class("col-xs-4 control-label")
                  <div class="col-xs-8">
                      @Html.DisplayFor(m => m.DocumentNo)
                  </div>
              </div>

        </div>


    </fieldset>

    <div class="form-actions">
        <div class="row">
            <div class="col-sm-12">
                <button id="submit-button" class="btn btn-primary" type="submit">
                    <i class="fa fa-save"></i>
                    Submit
                </button>
                <button id="cancel-button" class="btn btn-default" type="button">
                    Cancel
                </button>
            </div>
        </div>
    </div>
