                    @Html.DisplayFor(m => m.Type)
                </div>
            </div>


            <div class="form-group">
                @Html.Bootstrap().LabelFor(m => m.LetterNo).Class("col-xs-4 control-label")
                <div class="col-xs-8">
                    @Html.DisplayFor(m => m.LetterNo)
                </div>
            </div>


              <div class="form-group">
                  @Html.Bootstrap().LabelFor(m => m.LetterDate).Class("col-xs-4 control-label")
                  <div class="col-xs-8">
                      @Html.DisplayFor(m => m.LetterDate)
                  </div>
              </div>

              <div class="form-group">
                  @Html.Bootstrap().LabelFor(m => m.Category).Class("col-xs-4 control-label")
                  <div class="col-xs-8">
                      @Html.DisplayFor(m => m.Category)
                  </div>
              </div>

              <div class="form-group">
                  @Html.Bootstrap().LabelFor(m => m.ContractorId).Class("col-xs-4 control-label")
                  <div class="col-xs-8">
                      @Html.DisplayFor(m => m.ContractorId)
                  </div>
              </div>

              <div class="form-group">
                  @Html.Bootstrap().LabelFor(m => m.Object).Class("col-xs-4 control-label")
                  <div class="col-xs-8">
                      @Html.DisplayFor(m => m.Object)
                  </div>
              </div>

              <div class="form-group">
                  @Html.Bootstrap().LabelFor(m => m.Period).Class("col-xs-4 control-label")
                  <div class="col-xs-8">
                      @Html.DisplayFor(m => m.Period)
                  </div>
              </div>

              <div class="form-group">
                  @Html.Bootstrap().LabelFor(m => m.AmountIDR).Class("col-xs-4 control-label")
                  <div class="col-xs-8">
                      @Html.DisplayFor(m => m.AmountIDR)
