@using MCAWebAndAPI.Model.ViewModel.Form.Finance
@model TaxReimbursementVM

@{
    ViewBag.Title = "CreateTaxReimbursement";
}

@using (Html.BeginForm("CreateTaxReimbursement", "FINTaxReimbursementController", FormMethod.Post,
            new
            {
                @class = "form-horizontal",
                enctype = "multipart/form-data"
            }))
{
    <fieldset>
        <legend>Tax Reimbursement</legend>
      
          <div class="row">
           
     
            <div class="form-group">
                @Html.Bootstrap().LabelFor(m => m.Type).Class("col-xs-4 control-label")
