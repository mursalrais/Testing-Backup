@using MCAWebAndAPI.Model.ViewModel.Form.HR
@model ApplicationDataVM

<div class="col-xs-12" style="margin-bottom: 20px">
    @(Html.Kendo().Grid(Model.WorkingExperienceDetails)
        .Name("WorkingExperienceDetails")
        .Columns(columns =>
        {
            columns.Bound(p => p.Position).Hidden();
            columns.Bound(p => p.StrPosition);
            columns.Bound(p => p.Company);
            columns.Bound(p => p.From).Hidden();
            columns.Bound(p => p.StrFrom);
            columns.Bound(p => p.To).Hidden();
            columns.Bound(p => p.StrTo);
            columns.Bound(p => p.Remarks);
        })
        .DataSource(dataSource => dataSource.Ajax()
                   .Model(model =>
                   {
                       model.Id(p => p.ID);
                   })
        )
    )
</div>
<div class="col-xs-6">
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.YearRelevanWork).Class("col-xs-4 control-label")
        <div class="col-xs-8">
            @Html.Kendo().TextBoxFor(model => model.YearRelevanWork).HtmlAttributes(new { @class = "form-control", style = "width:100%;" })
        </div>
    </div>
</div>
<div class="col-xs-6">
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.MonthRelevantWork).Class("col-xs-4 control-label")
        <div class="col-xs-8">
            @Html.Kendo().TextBoxFor(model => model.MonthRelevantWork).HtmlAttributes(new { @class = "form-control", style = "width:100%;" })
        </div>
    </div>
</div>


<script>
    function getWorkingExperienceDetail(dataItem) {
        var data = $("#WorkingExperienceDetails").data("kendoGrid").dataSource.data();
        return data.indexOf(dataItem);
    }
</script>

