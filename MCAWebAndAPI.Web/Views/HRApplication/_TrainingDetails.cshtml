@using MCAWebAndAPI.Model.ViewModel.Form.HR
@model IEnumerable<TrainingDetailVM>

<div class="col-md-12">

    @(Html.Kendo().Grid(Model)
    .Name("TrainingDetail")
    .ToolBar(tools => tools.Create().Text("Add New Training"))
    .Editable(editable => editable.Mode(GridEditMode.InCell).CreateAt(GridInsertRowPosition.Bottom))
    .Columns(columns =>
    {
        columns.Bound(p => p.Institution).ClientTemplate("#= Institution #" +
                           "<input type='hidden' name='TrainingDetail[#= getTrainingDetail(data)#].Institution' value='#= Institution #' />"
                         );
        columns.Bound(p => p.Subject).ClientTemplate("#= Subject #" +
                           "<input type='hidden' name='TrainingDetail[#= getTrainingDetail(data)#].Subject' value='#= Subject #' />"
                         );
        columns.Bound(p => p.Year).ClientTemplate("#= Year #" +
                           "<input type='hidden' name='TrainingDetail[#= getTrainingDetail(data)#].Year' value='#= Year #' />"
                         );
        columns.Bound(p => p.Remarks).ClientTemplate("#= Remarks #" +
                           "<input type='hidden' name='TrainingDetail[#= getTrainingDetail(data)#].Remarks' value='#= Remarks #' />"
                         );
        columns.Bound(p => p.ID).Hidden().ClientTemplate("#= ID #" +
          "<input type='hidden' name='TrainingDetail[#= getTrainingDetail(data)#].ID' value='#= ID #' />"
        );
    })
    .DataSource(dataSource => dataSource.Ajax()
                   .Model(model =>
                   {
                       model.Id(p => p.ID);
                   })
                   .ServerOperation(false)
     )
    )
</div>


<script>
    function getTrainingDetail(dataItem) {
        var data = $("#TrainingDetail").data("kendoGrid").dataSource.data();
        return data.indexOf(dataItem);
    }
</script>
