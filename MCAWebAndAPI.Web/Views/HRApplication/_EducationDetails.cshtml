@using MCAWebAndAPI.Model.ViewModel.Form.HR
@model IEnumerable<EducationDetailVM>

<div class="col-md-12">

    @(Html.Kendo().Grid(Model)
    .Name("EducationDetail")
    .ToolBar(tools => tools.Create().Text("Add New Education"))
    .Editable(editable => editable.Mode(GridEditMode.InCell).CreateAt(GridInsertRowPosition.Bottom))
    .Columns(columns =>
    {
        columns.Bound(p => p.University).ClientTemplate("#= University #" +
                           "<input type='hidden' name='EducationDetail[#= getEducationDetail(data)#].University' value='#= University #' />"
                         );
        columns.Bound(p => p.Subject).ClientTemplate("#= Subject #" +
                           "<input type='hidden' name='EducationDetail[#= getEducationDetail(data)#].Subject' value='#= Subject #' />"
                         );
        columns.Bound(p => p.YearOfGraduation).ClientTemplate("#= YearOfGraduation #" +
                           "<input type='hidden' name='EducationDetail[#= getEducationDetail(data)#].YearOfGraduation' value='#= YearOfGraduation #' />"
                         );
        columns.Bound(p => p.Remarks).ClientTemplate("#= Remarks #" +
                           "<input type='hidden' name='EducationDetail[#= getEducationDetail(data)#].Remarks' value='#= Remarks #' />"
                         );
        columns.Bound(p => p.ID).Hidden().ClientTemplate("#= ID #" +
          "<input type='hidden' name='EducationDetail[#= getEducationDetail(data)#].ID' value='#= ID #' />"
        );
    })
    .DataSource(dataSource => dataSource.Ajax()
                   .Model(model =>
                   {
                       model.Id(p => p.ID);
                   })
                   .ServerOperation(false)
     )
    )
</div>

<script>
    function getEducationDetail(dataItem) {
        var data = $("#EducationDetail").data("kendoGrid").dataSource.data();
        return data.indexOf(dataItem);
    }
</script>
