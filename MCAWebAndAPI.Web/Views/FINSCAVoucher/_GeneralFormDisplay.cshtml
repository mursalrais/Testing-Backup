            @Html.DisplayFor(m => m.Purpose)
        </div>
    </div>
</div>
<div class="col-sm-5">
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.Project).Class("col-sm-4 control-label")
        <div class="col-sm-8">
            @Html.DisplayFor(m => m.Project)
        </div>
    </div>
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.ActivityName).Class("col-sm-4 control-label")
        <div class="col-sm-8">
            @Html.DisplayFor(m => m.ActivityName)
        </div>
    </div>
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.SubActivity).Class("col-sm-4 control-label")
        <div class="col-sm-8">
