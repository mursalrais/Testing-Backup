        </div>
    </div>
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.Fund).Class("col-sm-4 control-label")
        <div class="col-sm-8">
            @Html.DisplayFor(m => m.Fund)
        </div>
    </div>
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.RefferenceNo).Class("col-sm-4 control-label")
        <div class="col-sm-8">
            @Html.DisplayFor(m => m.RefferenceNo)
        </div>
    </div>
    <div class="form-group">
        @Html.Bootstrap().LabelFor(m => m.Remarks).Class("col-sm-4 control-label")
        <div class="col-sm-8">
            @Html.DisplayFor(m => m.Remarks)
        </div>
    </div>
    @if (!string.IsNullOrWhiteSpace(Model.DocumentUrl))
    {
        <div class="form-group">
            @Html.Bootstrap().LabelFor(m => m.Documents).Class("col-sm-4 control-label")
            <div class="col-sm-8">
                <button id="application-document-button" class="btn btn-default" type="button">
                    Click Here to go to SCA Voucher Attachments
                </button>
            </div>
        </div>
                    <script>
                        $('#application-document-button').click(function () {
                            parent.postMessage({
                                result: "Success", urlToRedirect: "@Model.DocumentUrl"
                            }, "@Model.DocumentUrl");
                        });
                    </script>
    }
</div>